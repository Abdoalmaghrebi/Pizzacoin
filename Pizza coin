                        <div class="text-gray-400 text-sm">you earn</div>
                        <div class="text-xl font-bold" id="total-earned">0</div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Features -->
            <div class="space-y-6">
                <!-- AI Tip -->
                <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
